#container{:style => "min-width: 310px; height: auto; margin: 0 auto"}
	#workout
		%h2{:style => "color:white"} Your Workout
		%p
			Date:
			=@workout.date.strftime("%A %B %d")
		%p
			Body focus:
			=@workout.workout
		%p
			Mood:
			=@workout.mood
		%p
			Length:
			=@workout.length
	
	#exercises
		%h2{:style => "color:white"} Exercises
		= render @workout.exercises
		
	
	
%h3{:style => "color:white"} Add an exercise 
= render "exercises/form"
%br/	
= link_to "Back", root_path, class: "btn btn-default"
= link_to "Edit", edit_workout_path(@workout), class: "btn btn-default"
= link_to "Delete", workout_path(@workout), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" }
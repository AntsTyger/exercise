#container{:style => "min-width: 310px; height: auto; margin: 0 auto"}
	#workout
		%h2{:style => "color:white"} Your Workout
		%p=  @workout.date
		%p=  @workout.workout
		%p=  @workout.mood
		%p=  @workout.length
	
	#exercises
		%h2{:style => "color:white"} Exercises
		= render @workout.exercises
		
	
	
%h3{:style => "color:white"} Add an exercise 
= render "exercises/form"
	
= link_to "Back", root_path
= link_to "Edit", edit_workout_path(@workout)
= link_to "Delete", workout_path(@workout), method: :delete, data: { confirm: "Are you sure?" }
= simple_form_for @plan, html: { multipart: true } do |f|
	- if @plan.errors.any?
		#errors
			%p
				= @plan.errors.count
				Prevented this recipe froms saving
			%ul
				- @plan.errors.full_messages.each do |msg|
					%li= msg
	.panel-body
		= f.input :title, input_html: { class: 'form-control' }
		= f.input :description, input_html: { class: 'form-control' }
		= f.input :image, input_html: { class: 'form-control' }
	
		.row
			.col-md-
				%h3 Moves
				#moves
					= f.simple_fields_for :moves do |move|
						= render 'move_fields', f: move
					.links
						= link_to_add_association 'Add Move', f, :moves, class: "btn btn-default add-button"



	= f.button :submit, class: "btn btn-primary"
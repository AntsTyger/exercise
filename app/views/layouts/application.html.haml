!!! 5
%html
%head
	%title Recipe App
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	%nav.navbar.navbar-default{:role => "navigation"}
		.container-fluid

			.navbar-header
				%button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
					%span.sr-only Toggle navigation
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar
				%a.navbar-brand{:href => "#"} Jump Start
			- if user_signed_in?
				%ul.nav.navbar-nav
					%li= link_to "Sign Out", destroy_user_session_path, method: :delete
					%li.dropdown
						%a.dropdown-toggle{"data-toggle" => "dropdown"}
							Recipes
							%ul.dropdown-menu{:role => "menu"}
							%span.caret
						%ul.dropdown-menu{:role => "menu"}
							%li= link_to "All Recipes", recipes_path
							%li= link_to "New Recipe", new_recipe_path
					%li.dropdown
						%a.dropdown-toggle{"data-toggle" => "dropdown", "data-target" => "#", :href => "#"}
							Workout
							%b.caret
						%ul.dropdown-menu
							%li= link_to "Workout log", workouts_path
							%li= link_to "New workout", new_workout_path
			- else
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Sign Up", new_user_registration_path
					%li= link_to "Sign In", new_user_session_path
	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"

		= yield

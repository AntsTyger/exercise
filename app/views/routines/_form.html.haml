#container{:style => "width: auto; height: auto"}
	= simple_form_for @routine, html: { multipart: true } do |f|
		- if @routine.errors.any?
			#errors
				%h2
					= pluralize(@routine.errors.count, "error")
					prevented this Routine from saving
				%ul
					- @routine.errors.full_messages.each do |msg|
						%li= msg
		.form-group
			= f.input :image, input_html: { class: 'form-control' }
			
		.form-group
			= f.input :title, input_html: { class: 'form-control' }
	
		.form-group
			= f.input :description, input_html: { class: 'form-control' }
	
		= f.button :submit, class: "btn btn-primary"